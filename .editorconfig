# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false


[*.{md,mkd,markdown,asc,adoc,asciidoc}]
insert_final_newline = true
trim_trailing_whitespace = true


[*.{sh,zsh,bash,fish}]
end_of_line = lf
indent_size = 4
indent_style = space

[*.{py,pyi}]
indent_size = 4
indent_style = space
charset = utf-8

[*.{json,yml,yaml}]
indent_size = 2
indent_style = space
